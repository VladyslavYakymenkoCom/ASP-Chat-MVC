                    <li class="nav-item"> 
                        <a href="@Url.Action("Index", "Home")" class="nav-link">
                            <span>Home</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="@Url.Action("SignUp", "Account")" class="nav-link">
