                            {
                                <span>Account</span>
                            }
                            else
                            {
                                <span>Sign Up</span>
                            }
                        </a> 
                    </li>
                    <li class="nav-item"> 
                        <a href="@Url.Action("Chat", "Chat")" class="nav-link">
                            <span>Chat</span>
                        </a>
                    </li>
                    @if (User.Identity.IsAuthenticated)
                    {
                    <li>
                        <a href="@Url.Action("LogOut", "Account")" class="nav-link">
                            <span>Log Out</span>
                        </a> </li>
                    }
                </ul>
                <form class="form-inline offset-lg-4 col-lg-2">
                    <div class="input-group">
                        <div class="input-group-prepend">
